= form_for @book.histories.last, url: book_history_path(@book.id, @book.histories.last.id), remote: true do |f|
  - if @history.errors.any?
    #error_explanation
      %h2= "#{pluralize(@history.errors.count, "error")} prohibited this history from being saved:"
      %ul
        - @history.errors.full_messages.each do |message|
          %li= message
  .actions
    = f.submit 'Return book'