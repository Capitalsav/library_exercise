= form_for @history, url: book_histories_path(@book.id), remote: true do |f|
  - if @history.errors.any?
    #error_explanation
      %h2= "#{pluralize(@history.errors.count, "error")} prohibited this history from being saved:"
      %ul
        - @history.errors.full_messages.each do |message|
          %li= message
  .field
    = f.hidden_field :user_id, value: current_user.id
  .field
    = f.hidden_field :book_id, value: @book.id
  .actions
    = f.submit 'TakeBook'