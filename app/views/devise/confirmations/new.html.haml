.container-fluid
  .site-content
    %br
    %h2.text-center Resend confirmation instructions
    = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      %br/
      .field
        %br/
        = f.email_field :email, placeholder: 'email', autofocus: true, autocomplete: 'email', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'devise-shared-input'
      .actions
        = f.submit 'Resend confirmation instructions', class: 'btn btn-success'
    .text-center.auth-links
      = render 'devise/shared/links'